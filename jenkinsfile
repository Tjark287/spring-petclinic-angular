node {

        stage('Checkout SCM'){
            git branch: 'master', url: 'git@github.com:Tjark287/spring-petclinic-angular.git'
        }
        stage('Install node modules'){
            sh "npm install"
        }

        stage('Build'){
            sh "npm runbuild:ssr"
        }

        stage('Deploy'){
            sh "pm2 restart all"
        }
    }